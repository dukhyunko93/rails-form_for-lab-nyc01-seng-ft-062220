<%= form_for @school_class do |f| %>
<h1>Edit Class Form</h1>
Class Title:
<%= f.text_field :title, value: "#{@school_class.title}" %><br><br>
Room Number:
<%= f.number_field :room_number, value: "#{@school_class.room_number}" %><br><br>
<%= f.submit "Update School Class" %><br><br>
<% end %>

<%= button_to "Cancel", school_classes_path, method: "get" %>